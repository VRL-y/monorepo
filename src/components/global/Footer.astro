---
// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const links = [
  {
    title: "Services",
    links: [
      { label: "Praxis-Anfragen-Autopilot", href: "/leistungen" },
      { label: "Terminmanagement-KI", href: "/leistungen" },
      { label: "DSGVO-Compliance", href: "/leistungen" },
      { label: "Workflow-Automatisierung", href: "/leistungen" },
      { label: "PVS-Integration", href: "/leistungen" },
    ],
  },
  {
    title: "Unternehmen",
    links: [
      { label: "Über VRLY", href: "/ueber-uns" },
      { label: "Unser Ansatz", href: "/ueber-uns" },
      { label: "Für Psychotherapeuten", href: "/leistungen" },
      { label: "Blog", href: "/blog" },
    ],
  },
  {
    title: "Support",
    links: [
      { label: "Kontakt", href: "/kontakt" },
      { label: "Workflow-Audit", href: "/kontakt" },
      { label: "Dokumentation", href: "/docs" },
      { label: "FAQ", href: "/faq" },
    ],
  },
  {
    title: "Rechtliches",
    links: [
      { label: "Impressum", href: "/infopages/impressum" },
      { label: "Datenschutz", href: "/infopages/datenschutz" },
      { label: "AGB", href: "/infopages/agb" },
      { label: "AVV-Muster", href: "/infopages/avv" },
    ],
  },
];
---

<footer class="overflow-hidden relative bg-vrly-neutral-100">
  <Wrapper class="py-12 border-t border-vrly-neutral-200">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 gap-y-12 sm:grid-cols-2 lg:grid-cols-6 mb-12">
      <!-- Company Info -->
      <div class="lg:col-span-2 lg:pr-8">
        <Logo class="h-8 text-vrly-blue-500 mb-4" />
        <Text
          tag="p"
          variant="textSM"
          class="text-vrly-slate-400 mb-4 max-w-sm"
        >
          VRLY automatisiert Effizienz mit Künstlicher Intelligenz. 
          Spezialisiert auf KI-gestützte Workflow-Automatisierung für Psychotherapeuten in Hannover.
        </Text>
        
        <!-- Contact Info -->
        <div class="space-y-2 text-sm text-vrly-slate-500">
          <div class="flex items-center gap-2">
            <span>📧</span>
            <a href="mailto:info@vrly.de" class="hover:text-vrly-blue-600 transition-colors">
              info@vrly.de
            </a>
          </div>
          <div class="flex items-center gap-2">
            <span>📞</span>
            <a href="tel:+4951193678551" class="hover:text-vrly-blue-600 transition-colors">
              +49 511 936 785 51
            </a>
          </div>
          <div class="flex items-center gap-2">
            <span>📍</span>
            <span>Hannover, Niedersachsen</span>
          </div>
        </div>
      </div>

      <!-- Links Sections -->
      {
        links.map((section) => (
          <div class="before:bg-white">
            <div>
              <Text
                tag="h3"
                variant="textBase"
                class="text-vrly-slate-500 font-semibold mb-4"
              >
                {section.title}
              </Text>
              <nav role="navigation">
                <ul role="list" class="space-y-3">
                  {section.links.map((link) => (
                    <li>
                      <Text
                        tag="a"
                        variant="textSM"
                        title={`Link zu ${link.label}`}
                        aria-label={link.label}
                        href={link.href}
                        class="text-vrly-slate-400 hover:text-vrly-blue-600 font-medium transition-colors duration-200"
                      >
                        {link.label}
                      </Text>
                    </li>
                  ))}
                </ul>
              </nav>
            </div>
          </div>
        ))
      }
    </div>

    <!-- CTA Section -->
    <div class="bg-vrly-blue-50 rounded-xl p-6 mb-8 border border-vrly-blue-200">
      <div class="text-center">
        <Text tag="h3" variant="textLG" class="font-semibold text-vrly-slate-500 mb-2">
          Bereit für mehr Effizienz in Ihrer Praxis?
        </Text>
        <Text tag="p" variant="textSM" class="text-vrly-slate-400 mb-4">
          Vereinbaren Sie einen kostenlosen Workflow-Audit
        </Text>
        <a 
          href="/kontakt" 
          class="inline-flex items-center px-4 py-2 bg-vrly-blue-500 hover:bg-vrly-blue-600 text-white text-sm font-medium rounded-lg transition-colors duration-200"
        >
          Jetzt Termin vereinbaren
        </a>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-vrly-neutral-200">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <Text
          id="year"
          tag="p"
          variant="textXS"
          class="text-vrly-slate-400 font-medium"
        >
          © 2025 VRLY. Alle Rechte vorbehalten.
        </Text>
        
        <div class="flex items-center gap-6 text-xs text-vrly-slate-400">
          <span class="flex items-center gap-1">
            <span>🔒</span>
            <span>DSGVO-konform</span>
          </span>
          <span class="flex items-center gap-1">
            <span>🏥</span>
            <span>Für Psychotherapeuten</span>
          </span>
          <span class="flex items-center gap-1">
            <span>📍</span>
            <span>Hannover</span>
          </span>
        </div>
      </div>
    </div>
  </Wrapper>
</footer>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const yearElement = document.getElementById("year");
    const currentYear = new Date().getFullYear();
    yearElement.textContent = `© ${currentYear} VRLY. Alle Rechte vorbehalten.`;
  });
</script>
