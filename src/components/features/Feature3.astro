---
// Assets
import { Code } from "astro:components";
import VisualAsset3 from "@/components/assets/VisualAsset3.astro";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Plus from "@/components/fundations/icons/Plus.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";

interface Props {
  title?: string;
  description?: string;
  items?: {
    title: string;
    description: string;
  }[];
}

const {
  title = "Warum VRLY?",
  description = "Wir kombinieren Expertise in KI, Workflow-Automatisierung und Projektmanagement mit tiefem Verständnis für Ihre Praxisabläufe und strengster DSGVO-Compliance.",
  items = []
} = Astro.props;

// Default features if no items are provided
const defaultItems = [
  {
    icon: "Filters",
    category: "Hyper-Nischenfokus",
    text: "Exklusiv spezialisiert auf die Bedürfnisse von Psychotherapeut:Innen in Hannover.",
  },
  {
    icon: "WaveSquare",
    category: "Nutzenfokus & Pragmatismus",
    text: "Wir liefern messbaren Mehrwert und finden schlanke, effektive Lösungen, die im Praxisalltag funktionieren.",
  },
  {
    icon: "ArrowIteration",
    category: "Vertrauen & Compliance",
    text: "DSGVO und §203 StGB stehen bei uns an erster Stelle. Höchste Sicherheit für sensible Patientendaten.",
  },
  {
    icon: "Plus",
    category: "Partnerschaftlichkeit",
    text: "Wir arbeiten auf Augenhöhe, hören zu und bauen langfristige, vertrauensvolle Beziehungen auf.",
  },
];

// Timeline
const timelineSteps = [
  {
    title: "Transfer initiated",
    description: "The wheels are in motion!",
    time: "Mar 12, 08:15 AM ",
    datetime: "2025-03-12T08:15",
    color: "bg-teal-200 ring-teal-500",
  },
  {
    title: "Stamp of approval",
    description: "Johnny Mnemonic gave it the nod.",
    time: "Mar 12, 09:47 AM ",
    datetime: "2025-03-12T09:47",
    color: "bg-teal-200 ring-teal-500",
  },
  {
    title: "Off to the Feds",
    description: "Sent to the Federal Reserve...",
    time: "Mar 12, 09:50 AM ",
    datetime: "2025-03-12T09:50",
    color: "bg-teal-200 ring-teal-500",
  },
  {
    title: "Money landed",
    description: "Settled with the recipient bank.",
    time: "Mar 12, 3:30 PM ",
    datetime: "2025-03-12T15:30",
    color: "bg-teal-200 ring-teal-500",
  },
  {
    title: "Final release",
    description: "Funds will be good to go on March 14!",
    time: "Mar 14",
    datetime: "2025-03-14T00:00",
    color: "bg-yellow-300 ring-yellow-500",
  },
];

// Customers Content
// Card
import CustomerEntry1 from "@/components/customers/CustomerEntry1.astro";
// Content
import { getCollection } from "astro:content";
const allCustomers = await getCollection("customers");
---

<section>
  <Wrapper variant="standard" class="py-12 lg:py-24 border-t">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-24">
      <div class="lg:order-last">
        <Text
          tag="h3"
          variant="textXL"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="font-semibold tracking-tight text-vrly-slate-500 md:text-balance"
        >
          {title}
        </Text>
        <Text
          tag="p"
          variant="textBase"
          data-aos="fade-up"
          data-aos-duration="1500"
          class="mt-2 text-base text-vrly-slate-400 md:text-balance"
        >
          {description}
        </Text>
        
        {items && items.length > 0 ? (
          <div class="mt-8 space-y-6">
            {items.map((item) => (
              <div class="bg-white p-5 rounded-lg shadow-sm border border-vrly-neutral-200">
                <h4 class="text-base font-semibold text-vrly-slate-500 mb-2">{item.title}</h4>
                <p class="text-sm text-vrly-slate-400">{item.description}</p>
              </div>
            ))}
          </div>
        ) : (
          <dl
            data-aos="fade-up"
            data-aos-duration="2000"
            class="mt-8 grid grid-cols-1 gap-y-8"
          >
            {
              defaultItems.map((section) => (
                <div>
                  <dt class="flex items-center gap-2 text-vrly-slate-500">
                    <CircleCheck size="base" class="text-vrly-green-600" />
                    <Text tag="p" variant="textSM" class="font-medium leading-6">
                      {section.category}
                    </Text>
                  </dt>
                  <dd class="mt-2 ml-7">
                    <Text tag="p" variant="textSM" class="text-vrly-slate-400">
                      {section.text}
                    </Text>
                  </dd>
                </div>
              ))
            }
          </dl>
        )}
      </div>
      
      <div class="relative bg-white shadow-lg rounded-xl p-6 border border-vrly-neutral-200">
        <div class="mb-4 pb-4 border-b border-vrly-neutral-200">
          <h3 class="text-lg font-semibold text-vrly-slate-500">VRLY vs. generische IT-Dienstleister</h3>
        </div>
        
        <div class="space-y-4">
          <div class="grid grid-cols-3 gap-2">
            <div class="col-span-1"></div>
            <div class="col-span-1 text-center bg-vrly-blue-50 p-2 rounded-lg">
              <p class="text-sm font-medium text-vrly-blue-600">VRLY</p>
            </div>
            <div class="col-span-1 text-center bg-vrly-slate-50 p-2 rounded-lg">
              <p class="text-sm font-medium text-vrly-slate-400">Generisch</p>
            </div>
          </div>
          
          <div class="grid grid-cols-3 gap-2 items-center">
            <div class="col-span-1">
              <p class="text-sm text-vrly-slate-500">Spezialisierung</p>
            </div>
            <div class="col-span-1 text-center">
              <CircleCheck size="base" class="inline text-vrly-green-600" />
              <span class="text-xs text-vrly-green-600 ml-1">Psychotherapie</span>
            </div>
            <div class="col-span-1 text-center">
              <span class="text-xs text-vrly-slate-400">Alle Branchen</span>
            </div>
          </div>
          
          <div class="grid grid-cols-3 gap-2 items-center">
            <div class="col-span-1">
              <p class="text-sm text-vrly-slate-500">DSGVO-Expertise</p>
            </div>
            <div class="col-span-1 text-center">
              <CircleCheck size="base" class="inline text-vrly-green-600" />
              <span class="text-xs text-vrly-green-600 ml-1">§203 StGB</span>
            </div>
            <div class="col-span-1 text-center">
              <span class="text-xs text-vrly-slate-400">Generisch</span>
            </div>
          </div>
          
          <div class="grid grid-cols-3 gap-2 items-center">
            <div class="col-span-1">
              <p class="text-sm text-vrly-slate-500">Automatisierung</p>
            </div>
            <div class="col-span-1 text-center">
              <CircleCheck size="base" class="inline text-vrly-green-600" />
              <span class="text-xs text-vrly-green-600 ml-1">KI-gestützt</span>
            </div>
            <div class="col-span-1 text-center">
              <span class="text-xs text-vrly-slate-400">Minimal</span>
            </div>
          </div>
          
          <div class="grid grid-cols-3 gap-2 items-center">
            <div class="col-span-1">
              <p class="text-sm text-vrly-slate-500">Praxisverständnis</p>
            </div>
            <div class="col-span-1 text-center">
              <CircleCheck size="base" class="inline text-vrly-green-600" />
              <span class="text-xs text-vrly-green-600 ml-1">Tiefgreifend</span>
            </div>
            <div class="col-span-1 text-center">
              <span class="text-xs text-vrly-slate-400">Oberflächlich</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Wrapper>
</section>
