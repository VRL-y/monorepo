---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import User from "@/components/fundations/icons/User.astro";
import ApiApp from "@/components/fundations/icons/ApiApp.astro";
import Settings from "@/components/fundations/icons/Settings.astro";
import Tools from "@/components/fundations/icons/Tools.astro";
import Search from "@/components/fundations/icons/Search.astro";
import ArrowRight from "@/components/fundations/icons/ArrowRight.astro";

interface Props {
  title?: string;
  description?: string;
  steps?: {
    title: string;
    description: string;
  }[];
}

const {
  title = "Unser Prozess",
  description = "So einfach ist der Weg zu mehr Effizienz in Ihrer Praxis:",
  steps = []
} = Astro.props;

// Default steps if none are provided
const defaultSteps = [
  {
    icon: "User",
    category: "Analyse & Konzeption",
    text: "Gemeinsame Aufnahme Ihres aktuellen Anfrageprozesses und Identifikation Ihrer spezifischen Bedürfnisse.",
  },
  {
    icon: "Settings",
    category: "Technische Umsetzung",
    text: "Einrichtung eines zentralen, sicheren Anfragekanals mit automatisierter Eingangsbestätigung und intelligenter Vorkategorisierung.",
  },
  {
    icon: "Search",
    category: "Einweisung & Übergabe",
    text: "Kurze, prägnante Schulung in der Nutzung des neuen Workflows und Übergabe einer einfachen Dokumentation.",
  },
  {
    icon: "Tools",
    category: "Laufende Unterstützung",
    text: "Bei Bedarf stehen wir Ihnen mit Rat und Tat zur Seite und optimieren Ihren Workflow kontinuierlich.",
  },
];
---

<section>
  <Wrapper variant="standard" class="py-12 border-t">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-24">
      <div>
        <Text
          class="span"
          variant="textXS"
          data-aos="fade-down"
          data-aos-duration="1000"
          class="flex items-center gap-2 font-medium uppercase text-vrly-slate-400"
        >
          <ApiApp size="sm" class="text-vrly-blue-600" />
          Schnell & Effizient
        </Text>
        <Text
          tag="h3"
          variant="displayMD"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="mt-8 font-semibold tracking-tight text-vrly-slate-500 md:text-balance"
        >
          {title}
        </Text>
        <Text
          tag="p"
          variant="textBase"
          data-aos="fade-up"
          data-aos-duration="1500"
          class="mt-2 text-base text-vrly-slate-400"
        >
          {description}
        </Text>
      </div>
      
      {steps && steps.length > 0 ? (
        <div class="mt-8 relative">
          <div class="absolute top-0 bottom-0 left-8 w-0.5 bg-vrly-blue-100"></div>
          <div class="space-y-8">
            {steps.map((step, index) => (
              <div class="relative pl-14">
                <div class="absolute left-0 flex items-center justify-center w-16 h-16">
                  <div class="flex items-center justify-center w-8 h-8 bg-vrly-blue-500 rounded-full text-white font-bold text-sm">
                    {index + 1}
                  </div>
                </div>
                <div class="bg-white p-4 rounded-lg border border-vrly-neutral-200 shadow-sm">
                  <h4 class="text-base font-semibold text-vrly-slate-500 mb-2">{step.title}</h4>
                  <p class="text-sm text-vrly-slate-400">{step.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      ) : (
        <dl
          data-aos="fade-up"
          data-aos-duration="2000"
          class="grid grid-cols-1 gap-2 mt-8 gap-y-8"
        >
          {
            defaultSteps.map((section, index) => (
              <div class="flex gap-4">
                <div class="flex-shrink-0 flex items-start justify-center w-8 h-8 bg-vrly-blue-500 rounded-full text-white font-bold text-sm mt-1">
                  {index + 1}
                </div>
                <div>
                  <dt class="flex items-center gap-2 text-vrly-slate-500">
                    <Text tag="p" variant="textSM" class="font-semibold leading-6">
                      {section.category}
                    </Text>
                  </dt>
                  <dd class="mt-1">
                    <Text tag="p" variant="textSM" class="text-vrly-slate-400">
                      {section.text}
                    </Text>
                  </dd>
                </div>
              </div>
            ))
          }
        </dl>
      )}
    </div>
  </Wrapper>
</section>
