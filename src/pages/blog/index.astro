---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import { pageSEO } from "@/config/seo";
// Component
import BlogSearch from "@/components/blog/BlogSearch.astro";
import BlogEntries2 from "@/components/blog/BlogEntries2.astro";
import SubscribeCta from "@/components/blog/SubscribeCta.astro";
// Content
import { getCollection } from "astro:content";
const allPostsUnsorted = await getCollection("posts");
// Sort the posts in descending order by publication date (newest to oldest)
const allPosts = allPostsUnsorted.sort(
  (a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
);
// Tags
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

export const prerender = true;

// Blog listing structured data
const blogListingStructuredData = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "VRLY Blog",
  "description": pageSEO.blog.description,
  "url": Astro.url.href,
  "publisher": {
    "@type": "Organization",
    "name": "VRLY"
  },
  "blogPost": allPosts.slice(0, 10).map(post => ({
    "@type": "BlogPosting",
    "headline": post.data.title,
    "description": post.data.description,
    "datePublished": post.data.pubDate,
    "author": {
      "@type": "Person",
      "name": post.data.author
    }
  }))
};
---

<BaseLayout
  title={pageSEO.blog.title}
  description={pageSEO.blog.description}
  keywords={pageSEO.blog.keywords}
  jsonLd={blogListingStructuredData}
>
  <section>
    <Wrapper variant="standard" class="pt-32 pb-12">
      <div
        class="grid items-end grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3"
      >
        <div class="lg:col-span-2">
          <Text
            tag="h1"
            variant="display2XL"
            data-aos="fade-up"
            data-aos-duration="1000"
            class="font-semibold tracking-tighter text-vrly-slate-500 lg:text-balance"
          >
            Blog & Insights
          </Text>
          <Text
            tag="p"
            variant="textLG"
            data-aos="fade-up"
            data-aos-duration="1500"
            class="max-w-lg mt-4 font-medium text-vrly-slate-400 md:text-balance"
          >
            Aktuelle Artikel zu KI, Automatisierung, DSGVO und Digitalisierung speziell f√ºr Psychotherapeut:Innen.
          </Text>
        </div>
        <form data-aos="fade-up" data-aos-duration="2000">
          <label for="email" class="text-xs font-medium text-vrly-slate-400">
            Newsletter abonnieren
          </label>
          <div class="flex flex-col gap-2 mt-1">
            <input
              type="email"
              id="email"
              placeholder="ihre@email.de"
              required
              class="block w-full h-10 px-4 py-2 text-sm text-vrly-slate-500 duration-300 border border-vrly-neutral-200 rounded-lg appearance-none bg-white placeholder-vrly-slate-300 focus:outline-none focus:ring-vrly-blue-500 focus:ring-offset-2 focus:ring-2 focus:ring-offset-white focus:border-vrly-blue-500"
            />
            <Button size="base" variant="default" type="submit" class="w-full bg-vrly-blue-500 hover:bg-vrly-blue-600 text-white border-0">
              Jetzt abonnieren
            </Button>
          </div>
          <Text tag="p" variant="textXS" class="mt-2 font-medium text-vrly-slate-400">
            Mit dem Abonnement stimmen Sie zu, unsere Updates zu erhalten. Kein Spam, versprochen!
          </Text>
        </form>
      </div>
    </Wrapper>
  </section>
  <section>
    <Wrapper variant="standard" class="border-t border-vrly-neutral-200">
      <div class="flex items-center gap-2">
        <BlogSearch />
        <div
          class="relative flex gap-2 h-full px-2 py-2 overflow-x-scroll scrollable-content snap-x snap-proximity scrollbar-hide"
        >
          <Text
            tag="span"
            variant="textXS"
            class="text-vrly-slate-400 font-medium whitespace-nowrap"
          >
            Themen:
          </Text>
          {
            tags.map((tag) => (
              <Text
                tag="a"
                variant="textSM"
                title={tag}
                aria-label={tag}
                href={`/blog/tags/${tag}`}
                class="capitalize text-vrly-slate-500 hover:text-vrly-blue-600 transition-colors whitespace-nowrap px-3 py-1 rounded-full bg-vrly-neutral-100 hover:bg-vrly-blue-50"
              >
                {tag}
              </Text>
            ))
          }
        </div>
      </div>
    </Wrapper>
  </section>
  <section>
    <Wrapper variant="standard" class="py-12 border-t border-vrly-neutral-200">
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {allPosts.filter(post => !post.data.draft).map((post) => <BlogEntries2 post={post} />)}
      </div>
    </Wrapper>
  </section>
  <SubscribeCta />
</BaseLayout>
