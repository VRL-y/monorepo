---
import BlogSearch from "@/components/blog/BlogSearch.astro";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import { seoConfig } from "@/config/seo";
// Content
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
// Tags
const tags = [...new Set(allPosts.filter(post => !post.data.draft).map((post) => post.data.tags).flat())];

// Count posts per tag
const tagCounts = tags.reduce((acc, tag) => {
  acc[tag] = allPosts.filter(post => post.data.tags.includes(tag) && !post.data.draft).length;
  return acc;
}, {} as Record<string, number>);

// Sort tags by post count
const sortedTags = tags.sort((a, b) => tagCounts[b] - tagCounts[a]);

export const prerender = true;

// Tags index page SEO
const tagsPageSEO = {
  title: "Alle Themen - VRLY Blog",
  description: "Durchsuchen Sie alle Themen unseres Blogs. Finden Sie Artikel zu KI, Automatisierung, DSGVO und Digitalisierung für Psychotherapeut:Innen.",
  keywords: [...seoConfig.site.keywords, "Blog Themen", "Tags", "Kategorien"]
};

// Tags page structured data
const tagsPageStructuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Blog Themen",
  "description": tagsPageSEO.description,
  "url": Astro.url.href,
  "isPartOf": {
    "@type": "Blog",
    "name": "VRLY Blog",
    "url": `${seoConfig.site.url}/blog`
  }
};
---

<BaseLayout
  title={tagsPageSEO.title}
  description={tagsPageSEO.description}
  keywords={tagsPageSEO.keywords}
  jsonLd={tagsPageStructuredData}
>
  <section>
    <Wrapper variant="standard" class="pt-32">
      <Text
        tag="h1"
        variant="display2XL"
        data-aos="fade-up"
        data-aos-duration="1000"
        class="font-semibold tracking-tighter text-vrly-slate-500 lg:text-balance"
      >
        Alle Themen
      </Text>
      <Text
        tag="p"
        variant="textLG"
        data-aos="fade-up"
        data-aos-duration="1500"
        class="max-w-lg mt-4 font-medium text-vrly-slate-400 md:text-balance"
      >
        Durchstöbern Sie unsere Artikel nach Themen, die für Ihre Praxis relevant sind.
      </Text>
    </Wrapper>
    <section>
      <Wrapper variant="standard" class="py-4 border-t border-vrly-neutral-200">
        <BlogSearch />
      </Wrapper>
      <Wrapper variant="standard" class="py-12 border-t border-vrly-neutral-200">
        <ul
          role="list"
          class="mt-2 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 xl:grid-cols-4"
        >
          {
            sortedTags.map((tag) => (
              <li class="group">
                <a 
                  href={`/blog/tags/${tag}`} 
                  class="relative block p-6 bg-white border border-vrly-neutral-200 rounded-xl shadow-sm hover:shadow-md hover:border-vrly-blue-300 transition-all duration-300"
                >
                  <div class="flex items-center justify-between mb-2">
                    <Text
                      tag="h3"
                      variant="textLG"
                      class="capitalize font-semibold text-vrly-slate-500 group-hover:text-vrly-blue-600"
                    >
                      {tag}
                    </Text>
                    <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-vrly-neutral-100 text-vrly-slate-400">
                      {tagCounts[tag]}
                    </span>
                  </div>
                  <Text
                    tag="p"
                    variant="textSM"
                    class="text-vrly-slate-400"
                  >
                    {tagCounts[tag]} {tagCounts[tag] === 1 ? 'Artikel' : 'Artikel'} zu diesem Thema
                  </Text>
                </a>
              </li>
            ))
          }
        </ul>
        
        {tags.length === 0 && (
          <div class="text-center py-12">
            <Text tag="p" variant="textLG" class="text-vrly-slate-400 mb-4">
              Noch keine Themen verfügbar.
            </Text>
            <a href="/blog" class="text-vrly-blue-600 hover:text-vrly-blue-700 font-medium">
              Zurück zum Blog
            </a>
          </div>
        )}
      </Wrapper>
    </section>
  </section>
</BaseLayout>
