---
import { Image } from "astro:assets";
import type { Props as ButtonProps } from "@/components/primitives/Link.astro";
import Link from "@/components/primitives/Link.astro";

interface Props {
  title: string;
  results: {
    label: string;
    value: string;
  }[];
}

const { title, results } = Astro.props;
---

<div class="py-20 text-sm font-medium">
  <p
    class="mb-3 text-4xl font-semibold leading-9 lg:max-w-[64%] lg:text-[2.13rem]"
    set:html={title}
  />
  <div class="mt-16">
    <div
      class="grid auto-cols-fr grid-cols-1 grid-rows-[auto] gap-[1.88rem] lg:grid-cols-3"
    >
      {
        results?.map(({ label, value }) => (
          <div class="flex flex-col items-center text-center">
            <h2 class="text-outline inline-block text-6xl font-semibold leading-none lg:text-[7.50rem]">
              {value}
            </h2>
            <div class="-mt-3 inline-block w-full px-3.5 py-5 text-lg">
              {label}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
  .text-outline {
    color: rgba(0, 0, 0, 0);
    -webkit-text-stroke-width: 2px;
    -webkit-text-stroke-color: black;
  }
</style>
