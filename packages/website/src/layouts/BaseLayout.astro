---
// Foundations
import "../styles/global.css";
import BaseHead from "@/components/fundations/head/BaseHead.astro";
// Scripts
import AOSBody from "@/components/fundations/scripts/AOSBody.astro";
// Components
import Footer from "@/components/global/Footer.astro";
import Navigation from "@/components/global/Navigation.astro";

// Layout Props
export interface Props {
  hideNav?: boolean;
  hideFooter?: boolean;
  // SEO Props
  title?: string;
  description?: string;
  canonical?: string;
  image?: string;
  noindex?: boolean;
  nofollow?: boolean;
  openGraph?: {
    title?: string;
    description?: string;
    image?: string;
    type?: string;
  };
  twitter?: {
    title?: string;
    description?: string;
    image?: string;
  };
  keywords?: string[];
  jsonLd?: object | object[];
}

const { hideNav = false, hideFooter = false, ...seoProps } = Astro.props;
---
<html
  lang="de"
  class="scroll-smooth selection:bg-vrly-blue-500 selection:text-white"
>
  <head>
    <BaseHead {...seoProps} />
  </head>
  <body class="relative flex flex-col min-h-screen bg-white">
    <div
      class="bg-stripes max-w-7xl mx-auto border-x border-vrly-neutral-200 px-2 md:px-0 w-full lg:overflow-hidden"
    >
      {!hideNav && <Navigation />}
      <main class="grow">
        <slot />
      </main>
    { !hideFooter && <Footer /> }
    </div>
    <!-- Scripts -->
    <AOSBody />
  </body>
</html>
