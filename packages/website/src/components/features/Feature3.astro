---
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

import CircleCheck from "@/components/fundations/icons/CircleCheck.astro";

interface Props {
  title?: string;
  description?: string;
  items?: {
    title: string;
    description: string;
  }[];
}

const {
  title = "Warum VRLY?",
  description = "Wir kombinieren Expertise in KI, Workflow-Automatisierung und Projektmanagement mit tiefem Verständnis für Ihre Praxisabläufe und strengster DSGVO-Compliance.",
  items = [],
} = Astro.props;

// Default features if no items are provided
const defaultItems = [
  {
    icon: "Filters",
    category: "Hyper-Nischenfokus",
    text: "Exklusiv spezialisiert auf die Bedürfnisse von Psychotherapeut:Innen in Hannover.",
  },
  {
    icon: "WaveSquare",
    category: "Nutzenfokus & Pragmatismus",
    text: "Wir liefern messbaren Mehrwert und finden schlanke, effektive Lösungen, die im Praxisalltag funktionieren.",
  },
  {
    icon: "ArrowIteration",
    category: "Vertrauen & Compliance",
    text: "DSGVO und §203 StGB stehen bei uns an erster Stelle. Höchste Sicherheit für sensible Patientendaten.",
  },
  {
    icon: "Plus",
    category: "Partnerschaftlichkeit",
    text: "Wir arbeiten auf Augenhöhe, hören zu und bauen langfristige, vertrauensvolle Beziehungen auf.",
  },
];
---

<section>
  <Wrapper variant="standard" class="border-t py-12 lg:py-24">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-24">
      <div class="lg:order-last">
        <Text
          tag="h3"
          variant="textXL"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="text-vrly-slate-500 font-semibold tracking-tight md:text-balance"
        >
          {title}
        </Text>
        <Text
          tag="p"
          variant="textBase"
          data-aos="fade-up"
          data-aos-duration="1500"
          class="text-vrly-slate-400 mt-2 text-base md:text-balance"
        >
          {description}
        </Text>

        {
          items && items.length > 0 ? (
            <div class="mt-8 space-y-6">
              {items.map((item) => (
                <div class="border-vrly-neutral-200 rounded-lg border bg-white p-5 shadow-sm">
                  <h4 class="text-vrly-slate-500 mb-2 text-base font-semibold">
                    {item.title}
                  </h4>
                  <p class="text-vrly-slate-400 text-sm">{item.description}</p>
                </div>
              ))}
            </div>
          ) : (
            <dl
              data-aos="fade-up"
              data-aos-duration="2000"
              class="mt-8 grid grid-cols-1 gap-y-8"
            >
              {defaultItems.map((section) => (
                <div>
                  <dt class="text-vrly-slate-500 flex items-center gap-2">
                    <CircleCheck size="base" class="text-vrly-green-600" />
                    <Text
                      tag="p"
                      variant="textSM"
                      class="font-medium leading-6"
                    >
                      {section.category}
                    </Text>
                  </dt>
                  <dd class="ml-7 mt-2">
                    <Text tag="p" variant="textSM" class="text-vrly-slate-400">
                      {section.text}
                    </Text>
                  </dd>
                </div>
              ))}
            </dl>
          )
        }
      </div>

      <div
        class="border-vrly-neutral-200 relative rounded-xl border bg-white p-6 shadow-lg"
      >
        <div class="border-vrly-neutral-200 mb-4 border-b pb-4">
          <h3 class="text-vrly-slate-500 text-lg font-semibold">
            VRLY vs. generische IT-Dienstleister
          </h3>
        </div>

        <div class="space-y-4">
          <div class="grid grid-cols-3 gap-2">
            <div class="col-span-1"></div>
            <div class="bg-vrly-blue-50 col-span-1 rounded-lg p-2 text-center">
              <p class="text-vrly-blue-600 text-sm font-medium">VRLY</p>
            </div>
            <div class="bg-vrly-slate-50 col-span-1 rounded-lg p-2 text-center">
              <p class="text-vrly-slate-400 text-sm font-medium">Generisch</p>
            </div>
          </div>

          <div class="grid grid-cols-3 items-center gap-2">
            <div class="col-span-1">
              <p class="text-vrly-slate-500 text-sm">Spezialisierung</p>
            </div>
            <div class="col-span-1 text-center">
              <CircleCheck size="base" class="text-vrly-green-600 inline" />
              <span class="text-vrly-green-600 ml-1 text-xs"
                >Psychotherapie</span
              >
            </div>
            <div class="col-span-1 text-center">
              <span class="text-vrly-slate-400 text-xs">Alle Branchen</span>
            </div>
          </div>

          <div class="grid grid-cols-3 items-center gap-2">
            <div class="col-span-1">
              <p class="text-vrly-slate-500 text-sm">DSGVO-Expertise</p>
            </div>
            <div class="col-span-1 text-center">
              <CircleCheck size="base" class="text-vrly-green-600 inline" />
              <span class="text-vrly-green-600 ml-1 text-xs">§203 StGB</span>
            </div>
            <div class="col-span-1 text-center">
              <span class="text-vrly-slate-400 text-xs">Generisch</span>
            </div>
          </div>

          <div class="grid grid-cols-3 items-center gap-2">
            <div class="col-span-1">
              <p class="text-vrly-slate-500 text-sm">Automatisierung</p>
            </div>
            <div class="col-span-1 text-center">
              <CircleCheck size="base" class="text-vrly-green-600 inline" />
              <span class="text-vrly-green-600 ml-1 text-xs">KI-gestützt</span>
            </div>
            <div class="col-span-1 text-center">
              <span class="text-vrly-slate-400 text-xs">Minimal</span>
            </div>
          </div>

          <div class="grid grid-cols-3 items-center gap-2">
            <div class="col-span-1">
              <p class="text-vrly-slate-500 text-sm">Praxisverständnis</p>
            </div>
            <div class="col-span-1 text-center">
              <CircleCheck size="base" class="text-vrly-green-600 inline" />
              <span class="text-vrly-green-600 ml-1 text-xs">Tiefgreifend</span>
            </div>
            <div class="col-span-1 text-center">
              <span class="text-vrly-slate-400 text-xs">Oberflächlich</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Wrapper>
</section>
