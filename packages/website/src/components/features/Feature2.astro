---
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
import ApiApp from "@/components/fundations/icons/ApiApp.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";

interface Props {
  title?: string;
  description?: string;
  items?: {
    title: string;
    description: string;
  }[];
}

const {
  title = "Unsere Kernleistungen",
  description = "Von der intelligenten Patientenanfragen-Verwaltung bis zur DSGVO-konformen Automatisierung – wir entwickeln maßgeschneiderte Lösungen, die Ihnen Zeit zurückgeben und Ihre Praxis zukunftssicher machen.",
  items = [],
} = Astro.props;

const defaultFeatures = [
  {
    icon: "Filters",
    category: "DSGVO-Compliance",
  },
  {
    icon: "WaveSquare",
    category: "Zeitersparnis",
  },
  {
    icon: "ArrowIteration",
    category: "Prozessoptimierung",
  },
  {
    icon: "Plus",
    category: "Automatisierung",
  },
];
---

<section>
  <Wrapper variant="standard" class="border-t py-12 lg:py-24">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-24">
      <div>
        <Text
          tag="span"
          variant="textXS"
          data-aos="fade-down"
          data-aos-duration="1000"
          class="text-vrly-slate-400 flex items-center gap-2 font-medium uppercase"
        >
          <ApiApp size="sm" class="text-vrly-teal-600" />
          Exklusiv für Psychotherapeut:Innen
        </Text>
        <Text
          tag="h3"
          variant="displayMD"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="text-vrly-slate-500 mt-8 font-semibold tracking-tight md:text-balance"
        >
          {title}
        </Text>
        <Text
          tag="p"
          variant="textBase"
          data-aos="fade-up"
          data-aos-duration="1500"
          class="text-vrly-slate-400 mt-2 text-base"
        >
          {description}
        </Text>

        {
          items && items.length > 0 ? (
            <div class="mt-8 space-y-6">
              {items.map((item) => (
                <div class="border-vrly-neutral-200 rounded-lg border bg-white p-5 shadow-sm">
                  <h4 class="text-vrly-slate-500 mb-2 text-base font-semibold">
                    {item.title}
                  </h4>
                  <p class="text-vrly-slate-400 text-sm">{item.description}</p>
                </div>
              ))}
            </div>
          ) : (
            <ul
              data-aos="fade-up"
              data-aos-duration="2000"
              role="list"
              class="mt-8 grid grid-cols-1 gap-2 sm:grid-cols-2"
            >
              {defaultFeatures.map((section) => (
                <li class="text-vrly-slate-500 flex items-center gap-2">
                  {section.icon === "Filters" && (
                    <Filters size="base" class="text-vrly-blue-600" />
                  )}
                  {section.icon === "WaveSquare" && (
                    <WaveSquare size="base" class="text-vrly-green-600" />
                  )}
                  {section.icon === "ArrowIteration" && (
                    <ArrowIteration size="base" class="text-vrly-teal-600" />
                  )}
                  {section.icon === "Plus" && (
                    <Plus size="base" class="text-vrly-blue-600" />
                  )}
                  <Text tag="p" variant="textSM" class="font-medium leading-6">
                    {section.category}
                  </Text>
                </li>
              ))}
            </ul>
          )
        }
      </div>
      <div
        class="bg-vrly-slate-50 border-vrly-neutral-200 rounded-lg border p-6 shadow-lg"
      >
        <div class="rounded-lg bg-white p-6 shadow-sm">
          <h3 class="text-vrly-slate-500 mb-4 text-lg font-semibold">
            VRLY Praxis-Anfragen-Autopilot
          </h3>

          <div class="space-y-4">
            <div class="border-vrly-green-500 border-l-4 py-1 pl-3">
              <h4 class="text-vrly-slate-500 text-sm font-medium">
                Zeitersparnis
              </h4>
              <p class="text-vrly-slate-400 text-xs">
                2-5 Stunden pro Woche weniger für Administration
              </p>
            </div>

            <div class="border-vrly-blue-500 border-l-4 py-1 pl-3">
              <h4 class="text-vrly-slate-500 text-sm font-medium">
                DSGVO-Konformität
              </h4>
              <p class="text-vrly-slate-400 text-xs">
                Alle Prozesse entsprechen den Datenschutzanforderungen
              </p>
            </div>

            <div class="border-vrly-teal-500 border-l-4 py-1 pl-3">
              <h4 class="text-vrly-slate-500 text-sm font-medium">
                Intelligente Kategorisierung
              </h4>
              <p class="text-vrly-slate-400 text-xs">
                Automatische Priorisierung und Zuordnung von Anfragen
              </p>
            </div>

            <div class="border-vrly-neutral-200 mt-6 border-t pt-4">
              <div class="flex items-center justify-between">
                <div class="text-vrly-slate-500 text-sm">
                  <span class="font-medium">Einmaliger Preis:</span>
                </div>
                <div class="text-vrly-blue-600 font-bold">799€</div>
              </div>
              <p class="text-vrly-slate-400 mt-1 text-xs">
                zzgl. MwSt. für die ersten 3 Pionier-Praxen
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Wrapper>
</section>
