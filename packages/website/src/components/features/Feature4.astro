---
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import ApiApp from "@/components/fundations/icons/ApiApp.astro";

interface Props {
  title?: string;
  description?: string;
  steps?: {
    title: string;
    description: string;
  }[];
}

const {
  title = "Unser Prozess",
  description = "So einfach ist der Weg zu mehr Effizienz in Ihrer Praxis:",
  steps = [],
} = Astro.props;

const defaultSteps = [
  {
    icon: "User",
    category: "Analyse & Konzeption",
    text: "Gemeinsame Aufnahme Ihres aktuellen Anfrageprozesses und Identifikation Ihrer spezifischen Bedürfnisse.",
  },
  {
    icon: "Settings",
    category: "Technische Umsetzung",
    text: "Einrichtung eines zentralen, sicheren Anfragekanals mit automatisierter Eingangsbestätigung und intelligenter Vorkategorisierung.",
  },
  {
    icon: "Search",
    category: "Einweisung & Übergabe",
    text: "Kurze, prägnante Schulung in der Nutzung des neuen Workflows und Übergabe einer einfachen Dokumentation.",
  },
  {
    icon: "Tools",
    category: "Laufende Unterstützung",
    text: "Bei Bedarf stehen wir Ihnen mit Rat und Tat zur Seite und optimieren Ihren Workflow kontinuierlich.",
  },
];
---

<section>
  <Wrapper variant="standard" class="border-t py-12">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-24">
      <div>
        <Text
          class="span"
          variant="textXS"
          data-aos="fade-down"
          data-aos-duration="1000"
          class="text-vrly-slate-400 flex items-center gap-2 font-medium uppercase"
        >
          <ApiApp size="sm" class="text-vrly-blue-600" />
          Schnell & Effizient
        </Text>
        <Text
          tag="h3"
          variant="displayMD"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="text-vrly-slate-500 mt-8 font-semibold tracking-tight md:text-balance"
        >
          {title}
        </Text>
        <Text
          tag="p"
          variant="textBase"
          data-aos="fade-up"
          data-aos-duration="1500"
          class="text-vrly-slate-400 mt-2 text-base"
        >
          {description}
        </Text>
      </div>

      {
        steps && steps.length > 0 ? (
          <div class="relative mt-8">
            <div class="bg-vrly-blue-100 absolute top-0 bottom-0 left-8 w-0.5" />
            <div class="space-y-8">
              {steps.map((step, index) => (
                <div class="relative pl-14">
                  <div class="absolute left-0 flex h-16 w-16 items-center justify-center">
                    <div class="bg-vrly-blue-500 flex h-8 w-8 items-center justify-center rounded-full text-sm font-bold text-white">
                      {index + 1}
                    </div>
                  </div>
                  <div class="border-vrly-neutral-200 rounded-lg border bg-white p-4 shadow-sm">
                    <h4 class="text-vrly-slate-500 mb-2 text-base font-semibold">
                      {step.title}
                    </h4>
                    <p class="text-vrly-slate-400 text-sm">
                      {step.description}
                    </p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ) : (
          <dl
            data-aos="fade-up"
            data-aos-duration="2000"
            class="mt-8 grid grid-cols-1 gap-2 gap-y-8"
          >
            {defaultSteps.map((section, index) => (
              <div class="flex gap-4">
                <div class="bg-vrly-blue-500 mt-1 flex h-8 w-8 flex-shrink-0 items-start justify-center rounded-full text-sm font-bold text-white">
                  {index + 1}
                </div>
                <div>
                  <dt class="text-vrly-slate-500 flex items-center gap-2">
                    <Text
                      tag="p"
                      variant="textSM"
                      class="leading-6 font-semibold"
                    >
                      {section.category}
                    </Text>
                  </dt>
                  <dd class="mt-1">
                    <Text tag="p" variant="textSM" class="text-vrly-slate-400">
                      {section.text}
                    </Text>
                  </dd>
                </div>
              </div>
            ))}
          </dl>
        )
      }
    </div>
  </Wrapper>
</section>
