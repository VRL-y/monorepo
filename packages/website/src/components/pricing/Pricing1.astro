---
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/elements/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import CreditCard from "@/components/fundations/icons/CreditCard.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
import Check from "@/components/fundations/icons/Check.astro";
import { EXTERNAL_LINKS } from "@/config/external-links";

interface Props {
  title?: string;
  description?: string;
  plans?: {
    name: string;
    price: string;
    description: string;
    features: string[];
    buttonText: string;
    highlighted?: boolean;
  }[];
}

const {
  title = "Transparente Preisgestaltung",
  description = "Unser VRLY Bootstrap-Pionier Angebot für die ersten 3 Praxen in Hannover",
  plans = [
    {
      name: "Praxis-Anfragen-Autopilot",
      price: "799€",
      description: "Einmaliger Festpreis (zzgl. MwSt.)",
      features: [
        "Analyse & Konzeption (ca. 1-2 Stunden)",
        "Technische Umsetzung (ca. 5-8 Stunden)",
        "Einweisung & Übergabe (ca. 1 Stunde)",
        "Implementierter, teilautomatisierter Workflow",
        "DSGVO-konforme E-Mail-Vorlagen",
        "Dokumentation des neuen Workflows",
        "Keine versteckten Kosten, keine monatlichen Gebühren"
      ],
      buttonText: "Jetzt Termin vereinbaren",
      highlighted: true
    }
  ]
} = Astro.props;
---

<section>
  <Wrapper variant="standard" class="py-12 border-t">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <Text
          class="span"
          variant="textXS"
          data-aos="fade-down"
          data-aos-duration="1000"
          class="inline-flex items-center font-medium uppercase text-vrly-slate-400 gap-2"
        >
          <CreditCard size="sm" class="text-vrly-blue-600" />
          Für Psychotherapeut:Innen in Hannover
        </Text>
        <Text
          tag="h3"
          variant="displayMD"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="mt-6 font-semibold tracking-tight text-vrly-slate-500"
        >
          {title}
        </Text>
        <Text
          tag="p"
          variant="textBase"
          data-aos="fade-up"
          data-aos-duration="1500"
          class="mt-2 text-base text-vrly-slate-400 max-w-2xl mx-auto"
        >
          {description}
        </Text>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {plans.map((plan) => (
          <div 
            class={`flex flex-col bg-white rounded-lg shadow-lg overflow-hidden border ${plan.highlighted ? 'border-vrly-blue-300 md:col-span-2 lg:col-span-3' : 'border-vrly-neutral-200'}`}
            data-aos="fade-up"
            data-aos-duration="2000"
          >
            <div class={`px-6 py-8 ${plan.highlighted ? 'bg-vrly-blue-50' : 'bg-white'}`}>
              <h3 class="text-xl font-bold text-vrly-slate-500">{plan.name}</h3>
              <div class="mt-4 flex items-baseline">
                <span class="text-3xl font-extrabold text-vrly-blue-600">{plan.price}</span>
                <span class="ml-2 text-sm text-vrly-slate-400">{plan.description}</span>
              </div>
            </div>
            
            <div class="flex-1 px-6 pt-6 pb-8">
              <ul class="space-y-4">
                {plan.features.map((feature) => (
                  <li class="flex items-start">
                    <div class="flex-shrink-0 pt-1">
                      <Check size="sm" class="text-vrly-green-600" />
                    </div>
                    <span class="ml-3 text-sm text-vrly-slate-500">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
            
            <div class="px-6 py-8 bg-vrly-slate-50 border-t border-vrly-neutral-200">
              <Link
                size="base"
                variant={plan.highlighted ? "default" : "muted"}
                href={EXTERNAL_LINKS.bookingCalendar}
                gap="xs"
                class={`group w-full flex justify-center ${plan.highlighted ? 'bg-vrly-blue-500 hover:bg-vrly-blue-600 text-white' : 'text-vrly-slate-500 hover:text-vrly-blue-600'}`}
              >
                {plan.buttonText}
                <ChevronRight
                  size="sm"
                  class="duration-300 easy-out-in group-hover:translate-x-2"
                />
              </Link>
            </div>
          </div>
        ))}
      </div>
      
      <div class="mt-12 text-center">
        <p class="text-sm text-vrly-slate-400">
          Alle Preise verstehen sich zzgl. der gesetzlichen MwSt. Bei Fragen zur Preisgestaltung oder individuellen Anforderungen kontaktieren Sie uns gerne.
        </p>
      </div>
    </div>
  </Wrapper>
</section>
