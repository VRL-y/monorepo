---
// LogoCloud This component renders technology partners and integrations for VRLY
// Props: - class: A string of additional classes to style the component.
// - title: A string for the section title
// - ...rest: Any other valid attributes for an div element (e.g., id, style, role, aria-label, etc.).
const { 
  class: className = "", 
  title = "Vertrauensvolle Technologie-Partner f√ºr Ihre Praxis",
  ...rest 
} = Astro.props;
// Fundations
import Text from "@/components/fundations/elements/Text.astro";

// Technology partners and integrations for psychotherapists
const partners = [
  { name: "Elefant", description: "Praxisverwaltung" },
  { name: "Psyprax", description: "PVS Integration" },
  { name: "Epikur", description: "Praxis-Software" },
  { name: "Make.com", description: "Workflow Automation" },
  { name: "Cloudflare", description: "Serverless Infrastructure" },
  { name: "DSGVO", description: "Compliance Framework" }
];
---

<div class={className} {...rest}>
  <div class="text-center mb-6">
    <Text
      tag="p"
      variant="textSM"
      class="font-medium text-vrly-slate-600"
    >
      {title}
    </Text>
  </div>
  <div
    class="items-center relative animate-quickMarquee flex gap-8 whitespace-nowrap"
  >
    {
      partners.map((partner) => (
        <div class="flex flex-col items-center min-w-fit px-4">
          <div class="bg-vrly-blue-100 text-vrly-blue-700 px-4 py-2 rounded-lg font-semibold text-sm">
            {partner.name}
          </div>
          <Text
            tag="p"
            variant="textXS"
            class="text-vrly-slate-500 mt-1 text-center"
          >
            {partner.description}
          </Text>
        </div>
      ))
    }
    {/* Duplicate for seamless loop */}
    {
      partners.map((partner) => (
        <div class="flex flex-col items-center min-w-fit px-4">
          <div class="bg-vrly-blue-100 text-vrly-blue-700 px-4 py-2 rounded-lg font-semibold text-sm">
            {partner.name}
          </div>
          <Text
            tag="p"
            variant="textXS"
            class="text-vrly-slate-500 mt-1 text-center"
          >
            {partner.description}
          </Text>
        </div>
      ))
    }
  </div>
</div>
