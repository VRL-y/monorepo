---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import { Image } from "astro:assets";
import Quote from "@/components/fundations/icons/Quote.astro";

interface Props {
  title?: string;
  testimonials?: {
    quote: string;
    author: string;
    role: string;
    image?: any;
  }[];
}

const {
  title = "Was unsere Kunden sagen",
  testimonials = [
    {
      quote:
        "Mit dem Praxis-Anfragen-Autopilot spare ich jede Woche mehrere Stunden, die ich jetzt in die Betreuung meiner Patienten investieren kann.",
      author: "Dr. Anna Müller",
      role: "Psychotherapeutin in Hannover",
    },
    {
      quote:
        "Endlich eine Lösung, die versteht, wie eine Psychotherapie-Praxis funktioniert. Der DSGVO-konforme Workflow gibt mir Sicherheit und spart wertvolle Zeit.",
      author: "Michael Schmidt",
      role: "Psychologischer Psychotherapeut",
    },
    {
      quote:
        "Die Implementierung war überraschend einfach und schnell. Bereits nach wenigen Tagen konnte ich eine deutliche Entlastung im Praxisalltag spüren.",
      author: "Sarah Weber",
      role: "Psychotherapeutin für Verhaltenstherapie",
    },
  ],
} = Astro.props;
---

<section>
  <Wrapper variant="standard" class="border-t py-12">
    <div class="mx-auto max-w-4xl">
      <div class="mb-12 text-center">
        <Text
          tag="h3"
          variant="displayMD"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="text-vrly-slate-500 font-semibold tracking-tight"
        >
          {title}
        </Text>
      </div>

      <div class="space-y-8" data-aos="fade-up" data-aos-duration="1500">
        {
          testimonials.map((testimonial) => (
            <div class="border-vrly-neutral-200 rounded-lg border bg-white p-6 shadow-sm">
              <div class="flex items-start">
                <div class="text-vrly-blue-500 flex-shrink-0">
                  <Quote size="lg" />
                </div>
                <div class="ml-4">
                  <p class="text-vrly-slate-500 text-lg italic">
                    {testimonial.quote}
                  </p>
                  <div class="mt-4 flex items-center">
                    {testimonial.image && (
                      <div class="mr-3 flex-shrink-0">
                        <Image
                          src={testimonial.image}
                          alt={testimonial.author}
                          width={40}
                          height={40}
                          class="rounded-full"
                        />
                      </div>
                    )}
                    <div>
                      <h4 class="text-vrly-slate-500 text-sm font-semibold">
                        {testimonial.author}
                      </h4>
                      <p class="text-vrly-slate-400 text-xs">
                        {testimonial.role}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
