---
const {
  gap,
  size,
  href,
  variant,
  onlyIconSize,
  class: className,
  ...rest
} = Astro.props;
// Default button
const defaultClass = [
  "text-white",
  "bg-base-800 ",
  "hover:bg-base-900",
  "ring-base-800",
];
// Accent button
const accentClass = ["text-base-900", "bg-teal-500 ", "ring-teal-600"];
// Muted button
const mutedClass = [
  "text-black",
  "bg-base-100 ",
  "hover:bg-base-100",
  "ring-base-200",
];
// Size (only applies if variant is not "link")
const xs = ["px-3", "py-2", "text-xs rounded-md"];
const sm = ["px-4", "py-2", "text-sm rounded-md"];
const base = ["px-4", "py-2", "text-base rounded-lg"];
const md = ["px-5", "py-4", "text-md rounded-lg"];
const lg = ["px-5", "py-4", "text-lg rounded-lg"];
const xl = ["px-6", "py-4", "text-xl rounded-lg"];
// Gap
const gapXS = ["gap-2"];
const gapSM = ["gap-4"];
const gapBase = ["gap-8"];
const gapMD = ["gap-10"];
const gapLG = ["gap-12"];
const additionalClasses = className ? className.split(" ") : [];
---

<a
  href={href}
  class:list={[
    ...(variant === "link"
      ? [...additionalClasses]
      : [
          "flex",
          "relative",
          "text-center",
          "font-medium",
          "items-center",
          "shadow-bottom",
          "justify-center",
          "overflow-hidden",
          "border border-transparent",
          "duration-300",
          "ease-in-out",
          "transition-all",
          "outline-offset-4",
          "hover:opacity-90",
          "hover:shadow-none",
          "focus:outline-2 focus-visible:outline-none",
          "focus:outline-teal-300",
          "ring inset-shadow-xs inset-shadow-white/30 active:inset-shadow-transparent",
          variant === "muted" && mutedClass,
          variant === "accent" && accentClass,
          variant === "default" && defaultClass,
          size === "xs" && xs,
          size === "sm" && sm,
          size === "base" && base,
          size === "md" && md,
          size === "lg" && lg,
          size === "xl" && xl,
          gap === "xs" && gapXS,
          gap === "sm" && gapSM,
          gap === "base" && gapBase,
          gap === "md" && gapMD,
          gap === "lg" && gapLG,
          ...additionalClasses,
        ]),
  ]}
  {...rest}
>
  <slot name="left-icon" />
  <slot />
  <slot name="right-icon" />
</a>
