{
  "name": "monorepo",
  "private": true,
  "description": "VRLY - AI-Powered Workflow Automation for Psychotherapists",
  "author": "Phichayut 'Florentin' Sakwiset <florentin.sakwiset@vrly.de>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/VRLYDE/monorepo.git"
  },
  "workspaces": [
    "packages/*",
    "packages/clients/*",
    "packages/integrations/*"
  ],
  "scripts": {
    "dev": "bun run dev:*",
    "dev:platform": "bun run --cwd packages/platform dev",
    "dev:website": "bun run --cwd packages/website dev",
    "dev:email-signature": "bun run --cwd packages/internal/email-signature-builder dev",
    "build": "bun run build:shared && bun run build:*",
    "build:shared": "bun run --cwd packages/shared build",
    "build:platform": "bun run --cwd packages/platform build",
    "build:website": "bun run --cwd packages/website build",
    "test": "bun run test:*",
    "test:platform": "bun run --cwd packages/platform test",
    "test:shared": "bun run --cwd packages/shared test",
    "lint": "bun run lint:*",
    "lint:fix": "bun run lint:fix:*",
    "clean": "bun run clean:dist && bun run clean:node_modules && bun run clean:.wrangler && bun run clean:.astro",
    "clean:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:.wrangler": "find . -name '.wrangler' -type d -prune -exec rm -rf '{}' +",
    "clean:.astro": "find . -name '.astro' -type d -prune -exec rm -rf '{}' +",
    "deploy": "bun run scripts/deploy.ts",
    "deploy:platform": "bun run scripts/deploy.ts platform",
    "deploy:website": "bun run scripts/deploy.ts website",
    "client:new": "bun run scripts/new-client.ts",
    "automation:run": "bun run scripts/automation.ts",
    "codegen": "bun run scripts/codegen.ts",
    "prepare": "husky install",
    "postinstall": "bun run prepare",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.0",
    "wrangler": "^3.22.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,css,html,yml,yaml}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  }
}
