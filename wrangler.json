{
  "$schema": "node_modules/wrangler/config-schema.json",

  "name": "vrly-website",
  "main": "./packages/website/dist/_worker.js/index.js",
  "compatibility_date": "2025-05-30",
  "account_id": "dea1503d32738013a37782b7671ee4ae",

  "build": {
    "command": "bun run build:website",
    "watch_dir": "./packages/website/dist"
  },

  "compatibility_flags": ["nodejs_compat"],

  "routes": [
    {
      "pattern": "vrly.de",
      "custom_domain": true
    },
    {
      "pattern": "mta-sts.vrly.de",
      "custom_domain": true
    },
    {
      "pattern": "mta-sts.vrly.de/.well-known/mta-sts.txt",
      "zone_name": "vrly.de"
    }
  ],

  "workers_dev": false,

  "preview_urls": false,

  "tsconfig": "./packages/website/tsconfig.json",

  "assets": {
    "binding": "ASSETS",
    "directory": "./packages/website/dist"
  },

  "observability": {
    "enabled": true
  },

  "env": {
    "staging": {
      "routes": [
        {
          "pattern": "staging.vrly.de",
          "custom_domain": true
        }
      ],
      "workers_dev": true,
      "preview_urls": true,
      "assets": {
        "binding": "ASSETS",
        "directory": "./packages/website/dist"
      },
      "kv_namespaces": [
        {
          "binding": "SESSION",
          "id": "7974aa3451be4ffd98aba571f384b058",
          "preview_id": "3c14a53e4a0f49f4ba67aa9f671e6cea"
        }
      ]
    }
  },

  "kv_namespaces": [
    {
      "binding": "SESSION",
      "id": "7974aa3451be4ffd98aba571f384b058",
      "preview_id": "3c14a53e4a0f49f4ba67aa9f671e6cea"
    }
  ]
}
